#!/bin/bash

if [ -x "/usr/bin/ack-grep" ]; then
  ACK="/usr/bin/ack-grep"
elif [ -x "/usr/local/bin/ack" ]; then
  ACK="/usr/local/bin/ack"
else
  echo "Ack isn't installed"
  exit 1
fi

if [ -z "$*" ]; then
  exec $ACK --help
fi

$ACK --follow --type-set "sass=.sass" --type-set "thrift=.thrift" --type-set "coffee=.coffee,.coffee.erb" "$@"
