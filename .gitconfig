[user]
  user = ddopson
  name = Dave Dopson
  email = ddopson@gmail.com

[color]
  ui = true

[alias]
  sub = submodule
  subs = submodule foreach git
  co = checkout
  stage = add -u
  unstage = reset HEAD
  stat = status
  st = status -- .
  b = !git branch -vv
  ba = !git branch -avv
  hist = !git --no-pager log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short -20
  history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  tp = !git push -nv && git pull -nv
  pull-all = pull --all -v
  push-all = push --all -v
  dc = diff --cached
  pick = cherry-pick
  ignored = !git clean -ndX | perl -pe 's/Would remove/ignored:/'

[status]
  submodulesummary = true

[push]
  default = current 

[diff]
  renames = true
  noprefix = true

[format]
  pretty = fuller
